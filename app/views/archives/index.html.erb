<div class="columns is-centered mt-6">
    <div class="column is-half">
        <%= @entries.each do |day, entries| %>
            <h3 class="is-size-4 has-text-weight-bold mb04 has-text-centered">
                Entries for <%= day %>
            </h3>

            <nav class="level is-mobile">
                <div class="level-item has-text-centered">
            </nav>
            
            <%= entries.each do |entry| %>
                <%= link_to  entry_path(entry) do   %>
                    <div class="card">
                        <div class="card-content">
                            <strong> <%= entry.meal_type%> </strong> <br/>
                            <%=entry.calories%> calories,
                            <%=entry.protiens%> g proteins,
                            <%=entry.carbohydrates%> g carbs,
                            <%=entry.fats%> g fat
                        </div>
                    </div>
                <% end %>
            <% end %>
        <% end %>

    </div>
</div>
