<%= params %>

<%= content_for :title do  %>
  <%= @entry.meal_type %> &ndash; <%= DateTime.now.to_s(:nice_date) %>
<% end %>

<div class="columns mt-6 is-centered">
  <div class="column is-one-third">
    <nav class="panel is-link">
      <p class="panel-heading">
        <%= @entry.meal_type %>
      </p>

      <div class="panel-block">
          Calories: <%= @entry.calories %>
      </div>

      <div class="panel-block">
          Protiens: <%= @entry.protiens %>
      </div>

      <div class="panel-block">
          Carbohydrates: <%= @entry.carbohydrates %>
      </div>
      
      <div class="panel-block">
          Fats: <%= @entry.fats %>
      </div>
    </nav>
  </div>


  <div class="columns is-mobile">
    <div class="column is-one-third">
      <%= link_to 'Edit', edit_entry_path(@entry), class: "button is-grey" %> 
      <%= link_to 'Delete', 
          entries_path(@entry), 
          method: :delete, 
          data: {confirm: "Are you sure?"}, class: "button is-grey" 
      %> 
    </div>
  </div>

</div>

